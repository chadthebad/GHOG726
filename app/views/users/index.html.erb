<h2>Users</h2>

<table class='table table-condensed table-striped'>
  <tr>
    <th>Name</th>
    <th>Password</th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

