<h2>Photos</h2>

<table class='table table-condensed table-striped'>
  <tr>
    <th>Title</th>
    <th>Album</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= link_to photo.title, photo %></td>
    <td><%= link_to photo.album.title, photo.album %></td>
    <td><%= link_to photo.album.user.name, photo.album.user %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

